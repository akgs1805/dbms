void wholesale :: uptrans()
{
	string dummy;
    MYSQL* conn;
    MYSQL* conn2;
    MYSQL_ROW row;
    MYSQL_RES* res;
    conn = mysql_init(0);
    conn = mysql_real_connect(conn, "localhost", "admin_anil", "admin", "wholesale", 0, NULL, 0);

    conn2 = mysql_init(0);
    conn2 = mysql_real_connect(conn, "localhost", "admin_anil", "admin", "wholesale", 0, NULL, 0);;

    if(conn){

        int id;
        double credit,debit,balance;
        cout << "Enter ID: ";
        cin >> id;
        cout << "Enter Credit: ";
        cin >> credit;
	cout<<"Enter debit:";
	cin>> debit;
	balance=credit -debit;

        int qstate1 = 0;

        stringstream ss1;
        ss1 << "UPDATE transaction SET credit='"<< credit <<"',debit='" << debit << "',balance='" << balance << "' WHERE cid = '" << id << "'";

        string query1 = ss1.str();

        const char* q1 = query1.c_str();
        qstate1 = mysql_query(conn2, q1);
        if(qstate1 == 0){
            cout << "Record Updated..." << endl;
        }else{
            cout << "Insert Error" << mysql_error(conn) << endl;
        }

    }

    cout << "Press B to go back";
    cin >> dummy;
    loop2: transaction();
    goto loop2;
    system("pause");
    system("cls");
}

void wholesale :: balance()
{
MYSQL* conn;
     	string dummy;
   	MYSQL_ROW row;
   	MYSQL_RES* res;
   	conn = mysql_init(0);
   	conn = mysql_real_connect(conn,"localhost","admin_anil","admin","wholesale",0,NULL,0);
		if(conn){
        int qstate = mysql_query(conn, "SELECT  cid,cname,balance FROM customer natural join transaction ");
        cout<<" CID \t | \t Name \t | \t Balance \t |"<<endl;
        if(!qstate){
            res = mysql_store_result(conn);

            while(row = mysql_fetch_row(res)){
                cout << row[0] <<"\t | \t"<<row[1] <<"\t | \t"<<row[2] <<"\t\t | \t"<<endl << endl;
             }
        }
    }
 cout << "Press B to go back";
    cin >> dummy;
    loop3: admin();
    goto loop3;
    system("pause");
    system("cls");
}

void wholesale ::workerfun()
{
    int age;
	string dummy;
    MYSQL* conn;
    MYSQL_ROW row;
    MYSQL_RES* res;
    conn = mysql_init(0);
    conn = mysql_real_connect(conn, "localhost", "admin_anil", "admin", "wholesale", 0, NULL, 0);
    if(conn){
        int qstate = 0;
        cout << "Enter Age limit : ";
        cin >> age;

        stringstream ss;
        ss << "select wname from worker  WHERE age < = '" << age << "'";

        string query = ss.str();

        const char* q = query.c_str();
        qstate = mysql_query(conn, q);
        if(!qstate){
            res = mysql_store_result(conn);

            while(row = mysql_fetch_row(res)){
                cout <<"\t | \t" << row[0] <<"\t | \t"  << endl << endl;
             }
        }
    }

    system("pause");
    system("cls");
}

void wholesale :: companyfun()
{
	int a;
 cout<<" press 1 to highest target valued company "<<endl;
	cout<<" press 2 to least stock valued company"<<endl;
	cout<<" press 3 to exit "<<endl;
	cin>>a;
	switch(a)
	{
		case 1: funtar();
			break;
		case 2: funleast();
			break;
		case 3: exit(0);
			break;
		default: cout<<" ENTER THE RIGHT choice";
			break;
	}
}

void wholesale :: funtar()
{
	string dummy;
    MYSQL* conn;
    MYSQL_ROW row;
    MYSQL_RES* res;
    conn = mysql_init(0);
    conn = mysql_real_connect(conn, "localhost", "admin_anil", "admin", "wholesale", 0, NULL, 0);
    if(conn){
        int qstate = mysql_query(conn, "SELECT compname,max(target) FROM company natural join stock");
        if(!qstate){
            res = mysql_store_result(conn);

            while(row = mysql_fetch_row(res)){
                cout << row[0] <<"="<< row[1] <<endl << endl;
             }
        }
    }

    cout << "Press B to go back";
    cin >> dummy;
    loop4: admin();
    goto loop4;
    system("pause");
    system("cls");
}

void wholesale :: funleast()
{
	string dummy;
    MYSQL* conn;
    MYSQL_ROW row;
    MYSQL_RES* res;
    conn = mysql_init(0);
    conn = mysql_real_connect(conn, "localhost", "admin_anil", "admin", "wholesale", 0, NULL, 0);
    if(conn){
        int qstate = mysql_query(conn, "SELECT compname,min(stockval) FROM company natural join stock");
        if(!qstate){
            res = mysql_store_result(conn);

            while(row = mysql_fetch_row(res)){
                cout << row[0] <<"="<< row[1] <<endl << endl;
             }
        }
    }

    cout << "Press B to go back";
    cin >> dummy;
    loop4: admin();
