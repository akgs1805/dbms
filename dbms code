    if(conn){

        int id;;
        int other;
        cout << "Enter Customer ID : ";
        cin >> id;
        int qstate1 = 0;

        stringstream ss1;
        ss1 << "DELETE FROM customer  WHERE Id = '" << id << "'";

        string query1 = ss1.str();

        const char* q1 = query1.c_str();
        qstate1 = mysql_query(conn2, q1);
        if(qstate1 == 0){
            cout << "Record Deleted..." << endl;
